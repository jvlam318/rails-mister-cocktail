<div class="banner2" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>');">
  <div class="container">
    <h1> <%= @cocktail.name %> </h1>
  </div>
</div>

<div class="container">

  <% @cocktail.doses.each do |dose| %>
    <div class="card-product">
      <img src="https://images.unsplash.com/photo-1534144778014-005455703c86?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" />
      <div class="card-product-infos">
        <h2><%= dose.ingredient.name %></h2>
        <p><%= dose.description %></p>
        <%= link_to '+', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'card-remove-link'  %>
      </div>
    </div>
  <% end %>
  <br>
  <%= link_to "add dose", new_cocktail_dose_path(@cocktail), :class => "btn btn-danger" %>
</div>
